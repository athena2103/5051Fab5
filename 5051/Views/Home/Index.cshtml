@{
    ViewBag.Title = "Home Page";
}
<div class="container-full">


    <header class="masthead">

        <h1>Nova Town</h1>
        <h3>Earn Points to update your avatar and stores, so you can build a great collection!</h3>

    </header>


    <section class="intro">
        <div class="container">
  

        <div class="row">
            <div class="col-sm-4 col-sm-4 text-center">
                <div class="service-box">
                    <i class="fas fa-4x fa-gamepad"></i>
                    <h3>Play Game</h3>
                    <p class="text-muted">Student game and report information. How to play and use.</p>
                    <p>
                        @Html.ActionLink("Student Intro", "StudentIntro", "Home", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
            <div class="col-sm-4 col-sm-4 text-center">
                <div class="service-box">
                    <i class="fas fa-4x fa-file-alt"></i>
                    <h3>Build Reports</h3>
                    <p class="text-muted">Teacher reports with attendance information. How to use. </p>
                    <p>
                        @Html.ActionLink("Teacher Intro", "AdminIntro", "Home", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
            <div class="col-sm-4 col-sm-4 text-center">
                <div class="service-box">
                    <i class="fas fa-4x fa-laptop"></i>
                    <h3>Login to Kiosk</h3>
                    <p class="text-muted">Kiosk information. How to login and use.</p>
                    <p>
                        @Html.ActionLink("Kiosk Intro", "KioskIntro", "Home", null, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
           
        </div>
    </section>

    <section class="banner">

        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <hr />
                    <h1 class="section-heading">We make school fun!</h1>
                </div>
            </div>
        </div>
    </section>
</div>
