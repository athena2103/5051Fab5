
@{
    ViewBag.Title = "My Reports";
}

<script>
function openTab(cityName) {
    var i;
    var x = document.getElementsByClassName("city");
    for (i = 0; i < x.length; i++) {
       x[i].style.display = "none";
    }
    document.getElementById(cityName).style.display = "block";
}
</script>


<div class="background">
    <div class="row text-center">
        <h2 align="center">My Report</h2>
        <div class="col-md-12">
            <div class="w3-bar w3-black">
                <button class="w3-bar-item w3-button" onclick="openTab('Month')">Month</button>
                <button class="w3-bar-item w3-button" onclick="openTab('Year')">Year</button>
                <button class="w3-bar-item w3-button" onclick="openTab('Stats')">Stats</button>
            </div>

            <div id="Month" class="w3-container city">
                <div class="span5">
                        <h3>Month</h3>
                </div>
            </div>
            <div class="student-report"> <img src="~/Content/img/studentCalendar1.png" width="1000" class="img-responsive" id="wireframe-student" /></div>
            <div id="Year" class="w3-container city" style="display:none">
                <h3>Year</h3>
                <p>Paris is the capital of France.</p>
            </div>

            <div id="Stats" class="w3-container city" style="display:none">
                <h3>Stats</h3>
                <p>Tokyo is the capital of Japan.</p>
            </div>
        </div>

    </div>
</div>